    {% set split = post.user.fullName|split(' ') %}
    {% set initials = split[1] is not defined ? attribute(split, 0)|first|capitalize : attribute(split, 0)|first|capitalize ~ attribute(split, 1)|first|capitalize %}


    <img data-src="holder.js/32x32?text={{ initials }}&bg=0086b3&fg=fff&size=10" alt="" class="mr-2 rounded">
    <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <span class="d-block">
            <a href="{{ path('micro_post_user', {'username' : post.user.username }) }}">
                <strong class="text-gray-dark">@{{ post.user.username }}</strong>
            </a>
            <small>{{ post.time|date('d/m/Y') }}</small>
        </span>
        <a href="{{ path('micro_post_post', { 'id' : post.id }) }}">{{ post.text }}</a>
    </p>
</div>